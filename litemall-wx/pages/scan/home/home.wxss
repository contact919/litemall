/* pages/scan/home/home.wxss */
.store_logo{
  width:100%;
  height:130rpx;
  line-height:130rpx;
  text-align:center;
  font-size:38rpx;
  color:#1b66ac;
  font-weight:700;
}
.con_icon_qd{
  width: 300rpx;
  height: 300rpx;
  margin: 180rpx auto 0;
  border-radius: 50%;
  background: linear-gradient(#f9ba37, #f57b1e); 
  box-shadow: 0rpx 0rpx 16rpx 16rpx #ffe9ca;
}
.icon_img{
  display:block;
  box-sizing:content-box;
  width:146rpx;
  height:146rpx;
  padding:64rpx 78rpx 0 78rpx;
}
.icon_img_intro{
  height:90rpx;
  text-align:center;
  line-height:90rpx;
  color:#fff;
  font-size: 26rpx;
}
.manual_input{
  box-sizing: content-box;
  width: 270rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin: 50rpx auto;
  font-size: 26rpx;
  border-radius: 50rpx;
  color: #999;
  background: #f7f8f3;
}
.con_scan_imgs{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 500rpx;
  height: 260rpx;
  margin: 0 auto;
}
.scan_imgs_one{
  display:flex;
  justify-content:center;
  align-items:center;
  flex-direction:column;
  box-sizing:content-box;
  width:150rpx;
}
.scan_imgs_line{
  width: 2rpx;
  height: 160rpx;
  background: #f7f8f3;
}
.scan_leave,.scan_pay{
  box-sizing: border-box;
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 16rpx;
}