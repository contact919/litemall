/* pages/scan/appearCode/appearCode.wxss */
page{
  background: #f7f7f7;
}
.appearCode{
  padding: 30rpx;
}
.cd_word{
  height: 70rpx;
  line-height: 50rpx;
  text-align: center;
  color: #333;
  font-size: 24rpx;
}
.qr_code{
  display: flex;
  height: 450rpx;
  margin-bottom: 30rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 18rpx;
  background: #fff;
}
.con_cd_img{
  width: 300rpx;
  height: 300rpx;
  overflow: hidden;
}
.cd_img{
  display: block;
  width: 100%;
  height: 100%;
}
.con_order{
  padding: 0 20rpx;
  border-radius: 20rpx;
  background: #fff;
}
.dis_lt{
  display: flex;
  align-items: center;
  height: 100rpx;
}
.spc_btw{
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order_word{
  font-size: 36rpx;
  color: #000;
  font-weight: 700;
}
.bgc_line{
  width: 12rpx;
  height: 38rpx;
  margin-right: 10rpx;
  background: #1876ce;
  border-radius: 20rpx;
}
.order_list_line{
  box-sizing: content-box;
  height: 2rpx;
  margin: 16rpx 0;
  background: #eee;
}
.product{
  height: 106rpx;
}
.pro_name{
  width: 100%;
  overflow:hidden;    
  white-space:nowrap; 
  text-overflow:ellipsis;
}
.pro_num{
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.total{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  margin: 15rpx 0;
  padding: 0 16rpx;
  border-radius: 16rpx;
  background: #fff;
}
.fontz{
  font-size: 32rpx;
  font-weight: 700;
}
